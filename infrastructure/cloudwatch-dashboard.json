{
  "widgets": [
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "MLOps/ModelAPI", "TotalRequests" ]
        ],
        "period": 300,
        "stat": "Sum",
        "region": "us-east-1",
        "title": "Total API Requests",
        "yAxis": {
          "left": {
            "min": 0
          }
        }
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "MLOps/ModelAPI", "Errors", { "stat": "Sum", "color": "#d62728" } ]
        ],
        "period": 300,
        "stat": "Sum",
        "region": "us-east-1",
        "title": "API Errors",
        "yAxis": {
          "left": {
            "min": 0
          }
        }
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "MLOps/ModelAPI", "AverageResponseTime" ]
        ],
        "period": 300,
        "stat": "Average",
        "region": "us-east-1",
        "title": "Average Response Time (ms)",
        "yAxis": {
          "left": {
            "min": 0
          }
        }
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "MLOps/ModelAPI", "TotalPredictions" ]
        ],
        "period": 300,
        "stat": "Sum",
        "region": "us-east-1",
        "title": "Total Predictions",
        "yAxis": {
          "left": {
            "min": 0
          }
        }
      }
    },
    {
      "type": "metric",
      "properties": {
        "metrics": [
          [ "MLOps/ModelAPI", "ModelLoaded" ]
        ],
        "period": 300,
        "stat": "Average",
        "region": "us-east-1",
        "title": "Model Health (1=Loaded, 0=Not Loaded)",
        "yAxis": {
          "left": {
            "min": 0,
            "max": 1
          }
        }
      }
    },
    {
      "type": "log",
      "properties": {
        "query": "SOURCE '/ecs/mlops-demo-dev-model-api'\n| fields @timestamp, @message\n| filter @message like /ERROR/\n| sort @timestamp desc\n| limit 20",
        "region": "us-east-1",
        "title": "Recent Errors (CloudWatch Logs)",
        "stacked": false
      }
    }
  ]
}
