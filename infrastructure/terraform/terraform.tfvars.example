# Example Terraform variables file
# Copy this to terraform.tfvars and customize

aws_region  = "us-east-1"
aws_profile = "mlops-dev-user"

project_name = "mlops-demo"
environment  = "dev"

# Existing S3 bucket with model artifacts
s3_bucket_name = "mlops-processed-data-982248023588"

# ECS Configuration (Free Tier eligible)
model_api_cpu            = 256  # 0.25 vCPU
model_api_memory         = 512  # 0.5 GB
model_api_desired_count  = 1
model_api_container_port = 8000

# Cost-saving: Disable NAT Gateway for development
# Tasks will get public IPs instead (still secure with security groups)
enable_nat_gateway = false

tags = {
  Project     = "MLOps-Cloud-Demo"
  ManagedBy   = "Terraform"
  Environment = "dev"
  Owner       = "dataappengineer"
}
