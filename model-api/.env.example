# FastAPI Model API Environment Configuration
# Copy this file to .env and configure the values for your environment

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# AWS Configuration
AWS_PROFILE=default
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# S3 Configuration (adjust bucket name and model path as needed)
S3_BUCKET_NAME=mlops-demo-bucket-unique-123
MODEL_KEY=models/latest/wine_quality_model.joblib

# Model Configuration
MODEL_CACHE_DIR=./model_cache
MODEL_CACHE_TTL=3600

# Application Settings
API_TITLE="MLOps Model API"
API_VERSION=1.0.0

# Production Settings (adjust for production deployment)
CORS_ORIGINS=["*"]
MAX_BATCH_SIZE=100
